<%= render "layouts/navbar" %>

<div class="container">
  <div class="booking-form">
	<div class="booking-container-right pull-right span4">  
	  
	  <!-- BEGIN CONTACT BOX -->

	  <div class="contact-box">
	    <div class="head-prompt">
	      <h3>Questions?</h3>
	    </div>
	    <p>Email <a href="mailto:team@joinhummingbird.com">team@joinhummingbird.com</a> or call 781-307-7431</p>
	  </div>

	  <!-- /END CONTACT BOX -->

	  <!-- BEGIN EVERY CLEAN BOX -->

	  <div id="every-clean">
	  	<div class="head-prompt">
	  	  <h3>With Every Clean</h3>
	  	</div>
	  	<ul>
	  	  <li>Change sheets and towels</li>
	  	  <li>Clean bathroom (toilet, sink, mirrors, bath/shower, floor)</li>
	      <li>Clear dishes and clean sink</li>
	  	  <li>Wipe down/vacuum floors</li>
	  	  <li>Take out trash and replace bags</li>
	  	  <li>Dust off surface tops</li>
	  	  <li>Tidy up any trash or mess left by guests</li>
	  	</ul>
	  	<div class="head-prompt">
	  	  <h3>Deep Clean</h3>
	  	</div>
	  	<ul>
	  	  <li>Heavy vacuuming and mopping</li>
	  	  <li>Thorough dusting of all surfaces, windows, furniture, electronics</li>
	  	  <li>Window ledges and blinds</li>
	      <li>Kitchen: stove, microwave, coutertops, appliances, fridge, oven</li>
	  	</ul>
	  </div>

	  <!-- /END CONTACT BOX -->
	
	</div> <!-- /end booking-container-right -->

	<!-- BEGIN BOOKING QUESTIONS -->

	<div class="booking-questions pull-left span7">
	  <div class="head-prompt">
	  	<h3>How deep are we going?</h3>
	  </div>
	  <div class="answer">
	  	<p class="answer-sub-lead">
  		  <input type="checkbox"> This is just a tidy up
		</p>
	  	<p class="answer-sub">$45 for one hour standard clean</p>
	  	<p class="answer sub" id="special-offer">$20 if you spend 10 minutes on the phone with us telling us how we can be better</p>
	  	<p class="answer-sub-lead">
  		  <input type="checkbox"> We're going deep, I want it spotless
		</p>
	  	<p class="answer-sub">$90 for two hour deep clean</p>
	  </div>
	  
	</div>

	<div class="booking-questions pull-left span7">
	  <div class="head-prompt">
	  	<h3>How big is your place?</h3>
	  </div>
	  <div class="answer">
	  	<p class="answer-sub-lead">Bedrooms</p>
	  	<p class="answer-sub-lead">Bathrooms</p>
	  </div>
	  
	</div>

	<div class="next-step btn btn-success btn-large span5 offset1">NEXT STEP</div>

	<!-- /END BOOKING QUESTIONS -->

  </div> <!-- /end booking-form -->
  <hr class="featurette-divider span12">
</div> <!-- /end container -->